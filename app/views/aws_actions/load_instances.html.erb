<% if @instances.blank? %>
	<div class='well'>
		<center>No instances found</center>
	</div>
<% else %>
	<table id="table_bug_report" class="table table-striped table-bordered table-hover table-condensed">
		<thead>
			<tr>
				<th class="center">Name</th>
				<th>Instance ID</th>
				<th>Instance Type</th>
				<th>Availabily Zone</th>
				<th>State</th>
				<th>Volumes</th>
				<th>Actions</th>
			</tr>
		</thead>
	
		<tbody>
			<% @instances.each do |instance| %>
				<tr>
					<td>
						<%= instance.tag_set.find{|ts| ts[:key]=="Name"}[:value] %>
					</td>
					<td><%= instance.instance_id %></td>
					<td><%= instance.instance_type %></td>
					<td><%= instance.placement.availability_zone %></td>
					<td>
						<% inst_state = instance.instance_state[:name] %>
						<%= content_tag :span, class: instance_state_class(inst_state) do %>
							<%= inst_state.camelize %>
						<% end %>
					</td>
					<td>
						<%= instance.block_device_mapping.map(&:ebs).map(&:volume_id).join(', ') %>
					</td>
					<td>
						<div class="inline position-relative">
							<button class="btn btn-minier btn-primary dropdown-toggle" data-toggle="dropdown"><i class="icon-cog icon-only"></i></button>
							<ul class="dropdown-menu dropdown-icon-only dropdown-light pull-right dropdown-caret dropdown-close">
								<li><a href="#" class="tooltip-success" data-rel="tooltip" title="Create Instant Snapshot" data-placement="left"><span class="green"><i class="icon-camera"></i></span></a></li>
								<li><a href="<%= create_snapshot_aws_actions_path(volume_id: instance.block_device_mapping.map(&:ebs).map(&:volume_id).first)%>" class="tooltip-warning" data-rel="tooltip" title="Schedule Snapshot" data-placement="left"><span class="blue"><i class="icon-time"></i></span> </a></li>
							</ul>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	<% if @next_token %>
		<div class="row-fluid">
			<div class="span6">
			</div>
			<div class="span6">
				<div class="dataTables_paginate paging_bootstrap pagination">
					<ul>
						<li class="next"><a id="<%= @next_token %>" class="load-more-instances" style="cursor:pointer">Next</a></li>
					</ul>
				</div>
			</div>
		</div>
	<% end %>
<% end %>
