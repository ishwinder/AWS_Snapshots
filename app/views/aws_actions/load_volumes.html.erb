<% if @volumes.blank? %>
	<div class='well'>
		<center>No volumes found for your account.</center>
	</div>
<% else %>
	<table id="table_bug_report" class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>Volume ID</th>
				<th>Capacity</th>
				<th>Volume Type</th>
				<th>Status</th>
				<th>Created At</th>
				<th>Actions</th>
			</tr>
		</thead>
	
		<tbody>
			<% @volumes.each do |volume|%>
				<tr>
					<td><%= volume.volume_id %></td>
					<td><%= volume.size %>GiB</td>
					<td><%= volume.volume_type %></td>
					<td>
						<% vol_state = volume.status %>
						<%= content_tag :span, class: volume_state_class(vol_state) do %>
							<%= vol_state.camelize %>
						<% end %>
					</td>
					<td><%= volume.create_time %></td>
					<td>
						<div class="inline position-relative">
							<button id=<%= volume.volume_id%> class="btn btn-minier btn-primary tooltip-success create_instant_snapshot" data-rel="tooltip" title="Create Instant Snapshot" data-placement="left"><i class="icon-camera icon-white"></i></button>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
	
	<div id="created_snapshot" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
			<h3 id="myModalLabel">Snapshot Created</h3>
		</div>
		<div class="modal-body">
			Snapshot creation initialized. You can see snapshot in <a href="/elements/snapshots"> Snapshots Tab</a>
		</div>
		<div class="modal-footer">
			<button class="btn btn-primary" data-dismiss="modal" aria-hidden="true">OK</button>
		</div>
	</div>
<% end %>