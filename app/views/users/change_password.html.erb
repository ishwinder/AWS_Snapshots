<div id="new-password-box" class="visible widget-box no-border">
	<% flash.each do |type, message| %>
		<%= content_tag :div, class: flash_class(type) do %>
			<button type="button" class="close" data-dismiss="alert">&times;</button>
			<%= message %>
		<% end %>
	<% end %>

	<div class="widget-body">
		<div class="widget-main">
			<h4 class="header green lighter bigger"><i class="icon-group blue"></i> Change Password </h4>
			<div class="space-6"></div>

			<%= form_for(@user, :url => update_password_user_path(@user)) do |f| %>
			<fieldset>
				<label>
					<span class="block input-icon input-icon-right">
						<%= f.password_field :password, :class => "span12", :placeholder => "Enter Old Password", :required => true %>
						<i class="icon-lock"></i>
					</span>
				</label>
				<label>
					<span class="block input-icon input-icon-right">
						<%= f.password_field :new_password, :class => "span12", :placeholder => "Enter New Password", :required => true %>
						<i class="icon-lock"></i>
					</span>
				</label>
				<label>
					<span class="block input-icon input-icon-right">
						<%= f.password_field :password_confirmation, :class => "span12", :placeholder => "Retype New Password", :required => true %>
						<i class="icon-retweet"></i>
					</span>
				</label>
				<div class="space-24"></div>

				<div class="row-fluid">
					<%= link_to profile_path, class: "span6 btn btn-small btn-danger " do %>
						<i class="icon-arrow-left"></i>
						Cancel
					<% end %>
					<button type="submit" class="span6 btn btn-small btn-success center">
						<i class="icon-arrow-right icon-on-right"></i> change password
					</button>
				</div>

			</fieldset>
			<% end %>
		</div>

	</div><!--/widget-body-->

</div>