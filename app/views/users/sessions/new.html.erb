<div id="login-box" class="visible widget-box no-border">

    <% flash.each do |type, message| %>
      <%= content_tag :div, class: flash_class(type) do %>
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= message %>
      <% end %>
    <% end %>

    <div class="widget-body">
     <div class="widget-main">
        <h4 class="header lighter bigger"><i class="icon-coffee green"></i> Please Enter Your Information</h4>
        
        <div class="space-6"></div>
        
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
             <fieldset>
                <label>
                    <span class="block input-icon input-icon-right">
                        <%= f.email_field :email, :autofocus => true, :class => "span12", :placeholder => "Email", :required => true %>
                        <i class="icon-user"></i>
                    </span>
                </label>
                <label>
                    <span class="block input-icon input-icon-right">
                        <%= f.password_field :password, :class => "span12", :placeholder=> "Password", :required => true %>
                        <i class="icon-lock"></i>
                    </span>
                </label>
                <div class="space"></div>
                <div class="row-fluid">
                    <label class="span8">
                       <% if devise_mapping.rememberable? -%>
                         <%= f.check_box :remember_me %><span class="lbl"> Remember Me</span>
                      <% end -%>
                     </label>
                     <button type="submit" class="btn btn-primary">
                      <i class="icon-key icon-white"></i> Sign in
                    </button>
                </div>
                
              </fieldset>
        <% end %>
     </div><!--/widget-main-->
    
    
     <div class="toolbar clearfix">
        <div>
            <a href=<%= new_password_path(resource_name)%> class="forgot-password-link"><i class="icon-arrow-left"></i> I forgot my password</a>
        </div>
        <div>
            <a href=<%= new_registration_path(resource_name)%> class="user-signup-link">I want to register <i class="icon-arrow-right"></i></a>
        </div>
     </div>
    </div><!--/widget-body-->

</div><!--/login-box-->
