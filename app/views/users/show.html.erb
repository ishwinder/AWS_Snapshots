<% content_for :header do %>
	<div class="page-header position-relative">
		<h1>Profile Details</h1>
	</div><!--/page-header-->
<% end %>

<div class="row-fluid">
	<div class="span6">
		<div class="widget-box">
			<div class="widget-header widget-header-small header-color-blue">
				<h5><i class="icon-list"></i> Basic Detail</h5>
			</div>
			
			<div class="widget-body">
				<div class="widget-main">
					<div class="row-fluid">
						<div class="span4">
							<b>First Name :</b>
						</div>
						<div class="span8">
							<%= @user.first_name %>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<b>Last Name :</b>
						</div>
						<div class="span8">
							<%= @user.last_name %>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<b>Email :</b>
						</div>
						<div class="span8">
							<%= @user.email %>
						</div>
					</div>
					<hr />
					<div class="row-fluid">
						<div class="span4">
							<b>Actions :</b>
						</div>
						<div class="span8">
							<%= link_to change_password_user_path(@user), class: "btn btn-default" do %>
								<i class="icon-undo"></i>
								Change Password
							<% end %>
							<%= link_to edit_user_registration_path, class: "btn btn-primary" do %>
								<i class="icon-edit"></i>
								Edit Details
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="span6">
		<div class="widget-box">
			<div class="widget-header widget-header-small header-color-green">
				<h5><i class="icon-list"></i> Aws Details</h5>
			</div>
			
			<div class="widget-body">
				<div class="widget-main">	
					<div class="row-fluid">
						<div class="span4">
							<b>Access Key :</b>
						</div>
						<div class="span8">
							<%= @user.access_key %>
						</div>
					</div>
					<div class="row-fluid">
						<div class="span4">
							<b>Secret Token :</b>
						</div>
						<div class="span8">
							<%= @user.secret_token %>
						</div>
					</div>
					<hr/>
					<div class="row-fluid">
						<div class="span4">
							<b>Actions :</b>
						</div>
						<div class="span8">
							<%= link_to edit_aws_creds_user_path(@user), class: "btn btn-success" do %>
								<i class="icon-edit"></i>
								Edit Aws Credentials
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
